<?xml version="1.0" encoding="utf-8"?>
<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.SubmissionNavigationAPI" parent="Theme.MaterialComponents.DayNight.DarkActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@android:color/holo_blue_dark</item>
        <item name="colorPrimaryVariant">@color/purple_700</item>
        <item name="colorOnPrimary">@color/black</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/teal_200</item>
        <item name="colorSecondaryVariant">@color/teal_700</item>
        <item name="colorOnSecondary">@color/black</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor">@android:color/holo_blue_dark</item>
        <!-- Customize your theme here. -->

        <!-- Card View Style for Dark Theme -->
        <item name="cardViewStyle">@style/CardView.Dark</item>

        <!-- Text Appearance Styles for Dark Theme -->
        <item name="textAppearanceBody1">@style/TextAppearance.Body1.Dark</item>
        <item name="textAppearanceHeadline6">@style/TextAppearance.Headline6.Dark</item>
    </style>

    <!-- Card View Style -->
    <style name="CardView.Dark" parent="Widget.MaterialComponents.CardView">
        <item name="cardBackgroundColor">@color/white</item>
        <item name="android:textColor">@color/white</item>
    </style>

    <!-- Text Appearance Styles -->
    <style name="TextAppearance.Body1.Dark" parent="TextAppearance.MaterialComponents.Body1">
        <item name="android:textColor">@color/white</item>
    </style>

    <style name="TextAppearance.Headline6.Dark" parent="TextAppearance.MaterialComponents.Headline6">
        <item name="android:textColor">@color/white</item>
    </style>
</resources>